<!DOCTYPE html>
<html>
    <head>
        <meta charset="UTF-8">
        <title>{% block title %}Welcome!{% endblock %}</title>
        {% block stylesheets %}
            <link rel="stylesheet" href="/style.css" />
        {% endblock %}
    </head>
    <body>
        {% block body %}{% endblock %}
        {% block javascripts %}{% endblock %}

        {% for label, messages in app.flashes %}
            {% for message in messages %}
                <div class="flash-notice {{ label }}">
                    {{ message }}
                </div>
            {% endfor %}
        {% endfor %}
    </body>
</html>
